<%- include("../../views/partials/admin/header") %>

<style>
    .main-content {
        padding: 20px;
        margin-top: 120px;
    }
    .content-wrapper {
        max-width: 800px;
        margin: 0 auto;
    }
    .content-header {
        margin-bottom: 20px;
    }
    .form-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
</style>

<div class="main-content">
    <div class="content-wrapper">
        <div class="content-header">
            <h2>Edit Category</h2>
        </div>
        <div class="form-container">
            <form method="post" action="/admin/editCategory/<%= category._id %>">
                <div class="mb-3">
                    <label for="categoryName" class="form-label">Name</label>
                    <input type="text" name="categoryName" value="<%= category.name %>" class="form-control" id="categoryName" />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" class="form-control" id="description" rows="4"><%= category.description %></textarea>
                </div>

                <div class="text-end mt-4">
                    <button class="btn btn-primary" type="submit">Update Category</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("../../views/partials/admin/footer") %>