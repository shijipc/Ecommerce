<%- include("../../views/partials/admin/header") %>
<link rel="stylesheet" href="/css/admindashboard.css">
<section class="content-main">
    <div class="top-bar">
        <div class="left-sidebar">
              
        </div>
        <div class="top-content">
            <h1 class="dashboard-title">Dashboard</h1>
            <a href="/admin/logout"><button class="logout-btn">Logout</button></a>
        </div>
    </div>

    <div class="cards-container">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3>Todays Sales</h3>
                    </div>
                    <div class="card-body">
                        <h2 class="amount">₹100,999</h2>
                        <p class="text">We have sold 123 items</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3>Todays Revenue</h3>
                    </div>
                    <div class="card-body">
                        <h2 class="amount">₹30,000</h2>
                        <p class="text">Profit made today so far</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3>Users Count</h3>
                    </div>
                    <div class="card-body">
                        <h2 class="amount">20390</h2>
                        <p class="text">Total users signed up to exiphones.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="selling-products">
        <div class="card">
            <div class="card-header">
                <h2>Selling Products</h2>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Sold</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <img src="product-1.jpg" alt="Product 1">
                                <span>Iroy Butterfly Sunglasses (Black)</span>
                            </td>
                            <td>₹2333</td>
                            <td>53 pos</td>
                            <td><span class="badge badge-success">In Stock</span></td>
                        </tr>
                        <tr>
                            <td>
                                <img src="product-2.jpg" alt="Product 2">
                                <span>Matin Aviator</span>
                            </td>
                            <td>₹2333</td>
                            <td>53 pos</td>
                            <td><span class="badge badge-danger">Out of Stock</span></td>
                        </tr>
                        <tr>
                            <td>
                                <img src="product-3.jpg" alt="Product 3">
                                <span>Opium</span>
                            </td>
                            <td>₹2322</td>
                            <td>53 pos</td>
                            <td><span class="badge badge-success">In Stock</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li> 
    </div>
</section>
